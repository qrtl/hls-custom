<?xml version="1.0" ?>
<odoo>
    <template
        id="report_purchaseorder_document"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//t[@t-if='o.dest_address_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//div[@t-if='o.date_order']" position="before">
            <div t-if="o.payment_term_id">
                <strong>Payment Terms:</strong>
                <br />
                <span t-field="o.payment_term_id"/>
            </div>
        </xpath>
        <xpath expr="//div[@class='page']" position="after">
            <div t-if="o.company_id.rep_title">
                <div style="position: absolute; width: 150px; right: 15px; padding-top: 15px; page-break-inside: avoid;">
                    <div style="text-align: center;">
                        <img
                            t-if="o.company_id.rep_signature"
                            t-att-src="image_data_uri(o.company_id.rep_signature)"
                            style="max-height: 40px;"
                            alt="Signature"
                        />
                        <hr
                            style="border: none; border-bottom: 2px solid black; text-align: right;"
                        />
                        <div style="text-align: center;">
                            <span t-field="o.company_id.rep_title" />
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
