<?xml version="1.0" ?>
<odoo>
    <template
        id="report_purchaseorder_document_inherit_purchase_order"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//div[@t-if='o.date_order']" position="before">
            <div t-if="o.payment_term_id">
                <strong>Payment Term:</strong>
                <br />
                <span t-field="o.payment_term_id.name"/>
            </div>
        </xpath>

        <xpath expr="//p[@t-if='o.partner_id.vat']" position="after">
            <span t-field="o.company_id.rep_signature"></span>
        </xpath>
    </template>
</odoo>
