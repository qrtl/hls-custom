<?xml version="1.0" ?>
<odoo>
    <template
        id="report_purchaseorder_document_inherit_purchase_order"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//div[@t-if='o.date_order']" position="before">
            <div t-if="o.payment_term_id">
                <strong>Payment Term:</strong>
                <br />
                <span t-field="o.payment_term_id.name"/>
            </div>
        </xpath>

        <xpath expr="//div[@class='page']" position="before">
            <div t-if="o.company_id.company_representative">
                <tr>
                    <td width="65%" />
                        <div style="text-align: center;">
                            <strong>Company Representative:</strong>
                            <span t-field="o.company_id.company_representative" />
                        </div>
                    <td width="35%">
                        <div style="text-align: center; padding-top: 15px">
                            <img
                                t-if="o.company_id.rep_signature"
                                t-att-src="image_data_uri(o.company_id.rep_signature)"
                                style="max-height: 40px;"
                                alt="Signature"
                            />
                        </div>
                        <hr
                            width="1000%"
                            style="border: none; border-bottom: 2px solid black;"
                        />
                    </td>
                </tr>

            </div>
        </xpath>
    </template>
</odoo>
