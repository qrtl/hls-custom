<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_batch_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.form</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="carrier_id" context="{'carrier_id': carrier_id}"/>
            </xpath>
            <xpath expr="//field[@name='picking_ids']" position="attributes">
                <attribute name="context">{'search_default_carrier_id': context.get('carrier_id', False)}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='draft']" position="before">
                <filter name="scheduled_today" string="Scheduled for Today"
                    domain="[
                        ('scheduled_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                        ('scheduled_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))
                    ]"
                />
                <filter name="scheduled_tomorrow" string="Scheduled for Tomorrow"
                    domain="[
                        ('scheduled_date','&gt;=', datetime.datetime.combine((context_today()+relativedelta(days=1)), datetime.time(0,0,0))),
                        ('scheduled_date','&lt;=', datetime.datetime.combine((context_today()+relativedelta(days=1)), datetime.time(23,59,59)))
                    ]"
                />
                <separator/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="carrier_id"/>
            </xpath>
        </field>
    </record>

    <!-- Delivert Request Form -->
    <record id="print_delivery_request_form" model="ir.actions.report">
        <field name="name">Delivery Request Form</field>
        <field name="model">stock.picking.batch</field>
        <field name="report_name">stock.picking.batch</field>
        <field name="report_type">py3o</field>
        <field name="py3o_filetype">pdf</field>
        <field name="module">stock_delivery_request_report</field>
        <field name="py3o_template_fallback">delivery_request_form.odt</field>
      
        <!-- Add entry in "Print" drop-down list -->
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="stock_picking_batch.model_stock_picking_batch"/>
    </record>

</odoo>
