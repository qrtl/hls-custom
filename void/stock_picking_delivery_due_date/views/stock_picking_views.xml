<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="delivery_due_date" attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"/>
                <field name="date_delivered" attrs="{'required':[('picking_type_code','=','outgoing'),('state','=','done')]}" readonly="0"/>
            </xpath>
        </field>
    </record>

    <record id="vpicktree_outgoing" model="ir.ui.view">
        <field name="name">vpicktree.outgoing</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="delivery_due_date"/>
            </xpath>
        </field>
    </record>

</odoo>
