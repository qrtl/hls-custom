<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_invoice_hls">
        <div
            t-attf-class="header o_company_hls_layout"
            t-att-style="report_header_style"
        >
            <div class="row">
                <div class="col-3 mb4">
                    <img
                        t-if="company.logo"
                        t-att-src="image_data_uri(company.logo)"
                        style="max-height: 45px;"
                        alt="Logo"
                    />
                </div>
                <div class="col-9 text-right" style="margin-top:20px; font-size: 20px;">
                    <t t-if="doc_type == 'invoice'">
                        <strong>Invoice No.:</strong>
                        <strong t-field="o.invoice_id.name" />
                    </t>
                </div>
            </div>
            <div
                t-if="company.logo or company.report_header"
                class="row zero_min_height"
            >
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;" />
                </div>
            </div>
            <div class="row">
                <div t-if="doc_type != 'invoice'" class="col-12 text-right">
                <!-- <div t-if="doc_type != 'invoice'" class="row col-xs-12 text-right"> -->
                    <strong t-field="o.invoice_id.date_invoice" t-options='{"widget": "date"}' />
                </div>
            </div>
        </div>
        
        <div class="article o_report_layout_background" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        
        <div t-attf-class="footer o_standard_footer o_company_hls_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <div t-field="company.report_footer" />
                </ul>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page" /> / <span class="topage" />
                </div>
            </div>
        </div>
    </template>


    <template id="report_invoice_document">
        <t t-call="account_invoice_report_hls.external_layout_invoice_hls">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="address">
                <address t-field="o.invoice_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <div t-if="o.invoice_id.partner_id.vat" class="mt16"><t t-esc="o.invoice_id.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.invoice_id.partner_id.vat"/></div>
            </t>
            <div class="page">
                <h2>
                    <span t-if="o.invoice_id.type == 'out_invoice' and o.invoice_id.state in ('open', 'in_payment', 'paid')">Invoice</span>
                    <span t-if="o.invoice_id.type == 'out_invoice' and o.invoice_id.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.invoice_id.type == 'out_invoice' and o.invoice_id.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.invoice_id.type == 'out_refund'">Credit Note</span>
                    <span t-if="o.invoice_id.type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.invoice_id.type == 'in_invoice'">Vendor Bill</span>
                    <span t-field="o.invoice_id.number"/>
                </h2>
                <div class="col-6">
                    <div>
                        <t t-if="o.invoice_id.company_id.company_chop">
                            <img
                                style="width:130px; position:absolute; right:40px; top:3px;"
                                t-attf-src="data:image/*;base64,{{o.invoice_id.company_id.company_chop}}"
                            />
                        </t>
                    </div>
                    <div>
                        <!-- Avoid using address tag here to not have a bottom margin -->
                        <span
                            t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        />
                        <span>TEL: </span><span t-field="company.phone" />
                    </div>
                    <div id="bank" class="col-7">
                        <span t-field="o.invoice_id.partner_id.company_bank_id"/>
                        <span t-field="o.invoice_id.partner_id.company_bank_id.bank_id.name"/>
                        <span t-field="o.invoice_id.partner_id.company_bank_id.acc_number"/>
                        <span t-field="o.invoice_id.partner_id.company_bank_id.acc_holder_name"/>                    
                    </div>                
                </div>
                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_id.name" name="description">
                        <strong>Description:</strong>
                        <p class="m-0" t-field="o.invoice_id.name"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_id.date_invoice" name="invoice_date">
                        <strong>Invoice Date:</strong>
                        <p class="m-0" t-field="o.invoice_id.date_invoice"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_id.date_due and o.invoice_id.type == 'out_invoice' and o.invoice_id.state in ('open', 'in_payment', 'paid')" name="due_date">
                        <strong>Due Date:</strong>
                        <p class="m-0" t-field="o.invoice_id.date_due"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_id.origin" name="origin">
                        <strong>Source:</strong>
                        <p class="m-0" t-field="o.invoice_id.origin"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.invoice_id.partner_id.ref" name="customer_code">
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="o.invoice_id.partner_id.ref"/>
                    </div>
                    <div name="reference" class="col-auto mw-100 mb-2" t-if="o.invoice_id.reference">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.invoice_id.reference"/>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_id.invoice_line_ids])"/>

                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <!-- TODO: remove in master -->
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_description" class="text-left"><span>Description</span></th>
                            <th name="th_source" class="d-none text-left"><span>Source Document</span></th>
                            <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                            <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.(%)</span>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="o.invoice_id.invoice_line_ids" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                    <td class="d-none"><span t-field="line.origin"/></td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.uom_id"  groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.invoice_line_tax_ids))"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_id.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.invoice_id.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.invoice_id.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(o.invoice_id.tax_line_ids) == 1 and o.invoice_id.amount_untaxed == amount_by_group[2]">
                                            <td><span t-esc="amount_by_group[0]"/></td>
                                            <td class="text-right o_price_total">
                                                <span t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]"/>
                                                <span>&amp;nbsp;<span>on</span>
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.invoice_id.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <p t-if="o.invoice_id.reference">
                    Please use the following communication for your payment : <b><span t-field="o.invoice_id.reference"/></b>
                </p>
                <p t-if="o.invoice_id.comment" name="comment">
                    <span t-field="o.invoice_id.comment"/>
                </p>
                <p t-if="o.invoice_id.payment_term_id" name="payment_term">
                    <span t-field="o.invoice_id.payment_term_id.note"/>
                </p>
                <p t-if="o.invoice_id.fiscal_position_id.note" name="note">
                    <span t-field="o.invoice_id.fiscal_position_id.note"/>
                </p>
                <div id="qrcode" t-if="(o.invoice_id.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.partner_bank_id.acc_number != False)">
                    <p t-if="(o.partner_bank_id.qr_code_valid)">
                        <strong class="text-center">Scan me with your banking app.</strong><br /><br />
                        <img class="border border-dark rounded" t-att-src="o.partner_bank_id.build_qr_code_url(o.residual,(o.invoice_id.reference) if (o.invoice_id.reference) else o.invoice_id.number)"/>
                    </p>
                    <p t-if="(o.partner_bank_id.qr_code_valid == False)">
                        <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong><br />
                    </p>
                </div>
            </div>
        </t>
    </template>

    <template id="invoice_delivery">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.user_id.sudo().lang if o.invoice_id.type in ('in_invoice', 'in_refund') else o.invoice_id.partner_id.lang"/>
                <t t-set="company" t-value="o.invoice_id.company_id"/>
                <t t-call="account_invoice_report_hls.report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
